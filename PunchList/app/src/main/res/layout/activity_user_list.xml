<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightGray"
        tools:context=".activity.UserListActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/deptName"
                style="@style/CustomEditText"
                android:hint="Department Name"
                android:inputType="text"
                android:textColorHint="@color/colorHintAlternate" />

            <EditText
                android:id="@+id/deptAdminName"
                style="@style/CustomEditText"
                android:hint="Department's Admin Name"
                android:inputType="text"
                android:textColorHint="@color/colorHintAlternate" />

            <EditText
                android:id="@+id/adminEmail"
                style="@style/CustomEditText"
                android:hint="Admin Email"
                android:inputType="text"
                android:textColorHint="@color/colorHintAlternate" />

            <EditText
                android:id="@+id/adminMobileNumber"
                style="@style/CustomEditText"
                android:hint="Admin Mobile Number"
                android:inputType="text"
                android:textColorHint="@color/colorHintAlternate" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/colorBlue"
                android:text="Add New"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/fontLarge" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewUsersList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="@dimen/_10sdp"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>